FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
# バッチ（HTTPサーバ不要）
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o ingest ./cmd/ingest

FROM alpine:latest
WORKDIR /app

RUN apk add --no-cache tzdata
ENV TZ=Asia/Tokyo

COPY --from=builder /app/ingest .
# EXPOSE不要（ポート開けない）
# 引数で日付/銘柄など切り替えるなら、ここはENTRYPOINTにしておくと便利
ENTRYPOINT ["./ingest"]